%h3 Сменить пароль

= nice_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
  = f.errors_for
  = f.hidden_field :reset_password_token
  = f.password_field :password
  = f.password_field :password_confirmation
  = f.submit "Сменить мой пароль"
