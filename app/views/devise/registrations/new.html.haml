.row-fluid
  %h3 Регистрация
  .span6
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    .well
      - f.object.type = 'User::Camper'
      - resource.type = f.object.type
      = f.text_field :type,  :disabled => true
    .span6
      %div
        = f.label :email
        %br/
        = f.email_field :email
      %div
        = f.label :password
        %br/
        = f.password_field :password
      %div
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation
      .span3
        - f.object.is_tourist = true
        - f.object.is_partner = false
        - f.object.is_hotelier = false

        -# = f.check_box :is_tourist
        -# = f.check_box :is_partner
        -# = f.check_box :is_hotelier

    .well
      = f.fields_for :profile do |ff|
        - $no_tourist = false
        = ff.label :phones
        = ff.text_field :phones
        %br/
        = ff.label :skype
        = ff.text_field :skype
        %br/
        = ff.label :icq
        = ff.text_field :icq
        %br/
        = ff.label :notified
        = ff.check_box :notified
        %br

    %div= f.submit "Регистрация"

    %br
  .control-group
    .controls
    = render "links"
