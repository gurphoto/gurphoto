= form_for @hotel_service_value do |f|
  -if @hotel_service_value.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hotel_service_value.errors.count, "error")} prohibited this hotel_service_value from being saved:"
      %ul
        - @hotel_service_value.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :service_id
    = f.number_field :service_id
  .field
    = f.label :hotel_id
    = f.number_field :hotel_id
  .field
    = f.label :value
    = f.text_field :value
  .actions
    = f.submit 'Save'
