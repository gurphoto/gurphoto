%table.table.table-striped
  %tr
    %th Название
    %th.actions(width="35")
    %th.actions(width="35")

  - collection.each do |resource|
    %tr
      %td= resource.name
      %td.actions
        - if can? :sort, resource
          = icon_link_to 'arrow-up', '', sort_hotel_room_list_path(resource, direction: :up), remote: true, data: { replace: '#content-table' }
          = icon_link_to 'arrow-down', '', sort_hotel_room_list_path(resource, direction: :down), remote: true, data: { replace: '#content-table' }
      %td.actions
        - if can? :update, resource
          = link_to edit_resource_path(resource) do
            %i.icon-pencil

        - if can? :delete, resource
          = link_to resource, confirm: 'Вы уверены, что хотите это?', method: :delete do
            %i.icon.icon-trash
