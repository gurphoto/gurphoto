= form_for @hotel_filter_item do |f|
  -if @hotel_filter_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hotel_filter_item.errors.count, "error")} prohibited this hotel_filter_item from being saved:"
      %ul
        - @hotel_filter_item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :filter_id
    = f.number_field :filter_id
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
