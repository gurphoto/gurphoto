= form_for @hotel_filter_value do |f|
  -if @hotel_filter_value.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hotel_filter_value.errors.count, "error")} prohibited this hotel_filter_value from being saved:"
      %ul
        - @hotel_filter_value.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :filter_id
    = f.number_field :filter_id
  .field
    = f.label :hotel_id
    = f.number_field :hotel_id
  .field
    = f.label :value
    = f.text_field :value
  .actions
    = f.submit 'Save'
