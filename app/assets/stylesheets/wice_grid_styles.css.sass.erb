.wice_grid
  width: 100%
  border-collapse: separate
  border: 1px solid #ccc
  border-radius: 4px
  margin-bottom: 20px

  .wice_grid_title_row
    text-align: left

  .wice_grid_filter_row
    text-align: left

  tfoot
    td
      border: 0

  input
    font-size: 11px
    height: 15px

  tbody
    tr.even, tr.odd
      td.sorted
        background: #fff

  .active_filter
    padding-top: 5px

  .actions
    width: 60px
    padding: 0 0 0 8px
    text-align: center

    a
      margin-right: 5px
