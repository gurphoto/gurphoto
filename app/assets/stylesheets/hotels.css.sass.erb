.hotels-form
  h3
    border-bottom: 1px dotted #ccc
    margin-bottom: 10px
    font-weight: 400
    .btn
      margin-top: 4px
  .full-items
  .image-fields
    .upload
      position: relative
      box-shadow: none
      .swfupload
        position: absolute
        left: 0
        top: 0
        width: 100%
        height: 100%
    .empty-image
      height: 110px
      background: url('/assets/ajax-loader.gif') no-repeat 50% 50%
    img
      min-height: 110px
    textarea
      width: 150px
      margin-top: 5px
    .thumbnail
      position: relative
      .remove
        position: absolute
        right: -7px
        top: -7px

  .long-labels
    .control-label
      width: 230px

    .controls
      margin-left: 240px

.control-group
  .fields
    padding-bottom: 3px

.search-form
  color: #555

  label
    font-size: 11px
    color: #555

  .control-group
    margin-bottom: 8px

  .slider
    font-size: 11px

  .accordion-toggle
    color: #aaa
    font-size: 12px
    text-transform: uppercase

    i
      opacity: 0.8
      margin-right: 2px

    &.no-line
      text-decoration: none
      cursor: default

.slider-table
  width: 100%

  .slider-column
    padding-right: 20px
    padding-top: 10px

  .slider-fields
    width: 70px
    font-size: 10px
    color: #aaa

    input
      font-size: 10px

.hotels-show
  .images
    img
      max-height: 100px

  .rooms
    .thumbnails
      img
        width: 100px
        height: 100px

  .special-offers
    .accordion-heading
      a
        text-transform: uppercase
        color: #555
        text-decoration: none

    .offer-item
      border-bottom: 1px dotted #ccc
      margin-top: 10px

      &:first-child
        margin-top: 0

      &:last-child
        border: 0

.short-special-offers
  .offer-item
    margin-top: 10px
    padding: 0 10px 10px 10px
    border-bottom: 1px dotted #ccc

    .date
      text-align: right
      font-size: 11px
      color: #777

    &:last-child
      border: 0

  .more
    padding-top: 3px
    text-align: right

    a
      font-size: 11px


.search-table
  width: 100%
  margin: 20px 0 10px 0

  input
    width: 88%

  .field-col
    width: 100%

  .button-col
    white-space: nowrap

  .results
    .item
      padding: 5px 10px
      border: 1px solid #999
      border-radius: 4px

      h6
        color: #111
